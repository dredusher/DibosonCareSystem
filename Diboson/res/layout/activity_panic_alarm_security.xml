<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/panic_alarm_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:longClickable="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PanicAlarmActivity" >

    <TextView
        android:id="@+id/security_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_font_size_smaller"
        android:gravity="center_horizontal"
        android:text="@string/entered_security_code"
        android:textSize="@dimen/default_big_font_size"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/security_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/security_title"
        android:layout_marginTop="@dimen/default_font_size_smaller"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="@string/blank_textview"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/default_big_font_size" />

    <TableRow
        android:id="@+id/panic_alarm_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/security_string"
        android:layout_marginBottom="@dimen/default_font_size"
        android:layout_marginTop="@dimen/default_font_size_smaller"
        android:gravity="center_horizontal"
        android:visibility="visible" >

        <ImageButton
            android:id="@+id/panic_alarm_clubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font2dp"
            android:background="@color/transparent"
            android:contentDescription="@string/default_description"
            android:scaleType="fitXY"
            android:src="@drawable/clubs_smaller" />

        <ImageButton
            android:id="@+id/panic_alarm_hearts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font2dp"
            android:background="@color/transparent"
            android:contentDescription="@string/default_description"
            android:scaleType="fitXY"
            android:src="@drawable/hearts_smaller" />

        <ImageButton
            android:id="@+id/panic_alarm_diamonds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font2dp"
            android:background="@color/transparent"
            android:contentDescription="@string/default_description"
            android:scaleType="fitXY"
            android:src="@drawable/diamonds_smaller" />

        <ImageButton
            android:id="@+id/panic_alarm_spades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font2dp"
            android:background="@color/transparent"
            android:contentDescription="@string/default_description"
            android:scaleType="fitXY"
            android:src="@drawable/spades_smaller" />

    </TableRow>

  

</RelativeLayout>