
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/LinearLayout2"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/diboson_bw_edge"
	    android:orientation="vertical"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".BarCodeEntry" >

    	<TextView
        	android:id="@+id/bar_code_entered"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:layout_marginTop="@dimen/default_font_size"
        	android:gravity="center"
        	android:text="@string/hello_world"
        	android:textSize="@dimen/Font_28dp" />

    	<TextView
        	android:id="@+id/bar_code_description_title"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:text="@string/description"
        	android:textSize="@dimen/default_font_size" />

    	<EditText
        	android:id="@+id/bar_code_description"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:layout_marginLeft="@dimen/default_font_size"
        	android:layout_marginRight="@dimen/default_font_size"
        	android:layout_weight="0.20"
        	android:background="@drawable/inputfield"
        	android:ems="10"
        	android:hint="@string/bar_code_description_hint"
        	android:inputType="textMultiLine"
        	android:lines="@integer/Number_5"
        	android:textSize="@dimen/default_font_size" >

        	<requestFocus />
    	</EditText>

    	<TextView
       	 	android:id="@+id/bar_code_actions_title"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:layout_marginTop="@dimen/default_font_size_smaller"
        	android:text="@string/actions"
        	android:textSize="@dimen/default_font_size" />
    
    	<EditText
        	android:id="@+id/bar_code_actions"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:layout_marginLeft="@dimen/default_font_size"
        	android:layout_marginRight="@dimen/default_font_size"
        	android:layout_weight="0.20"
        	android:background="@drawable/inputfield"
        	android:ems="10"
        	android:hint="@string/bar_code_actions_hint"
        	android:inputType="textMultiLine"
        	android:lines="@integer/Number_5"
        	android:textSize="@dimen/default_font_size" >
    	</EditText>
    
    	<Button
        	android:id="@+id/bar_code_actions_button"
        	style="@style/customButton"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="@dimen/default_font_size"
        	android:layout_marginRight="@dimen/default_font_size"
        	android:layout_marginTop="@dimen/default_font_size_smaller"
        	android:text="@string/press_to_define_actions"
        	android:textSize="@dimen/default_font_size"
        	android:textStyle="bold" />
    
   	 	<Button
        	android:id="@+id/bar_code_button"
        	style="@style/customButton"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="@dimen/default_font_size"
        	android:layout_marginRight="@dimen/default_font_size"
        	android:text="@string/bar_code_create"
        	android:textSize="@dimen/default_font_size"
        	android:textStyle="bold" />

    	<Button
        	android:id="@+id/bar_code_search"
        	style="@style/customButton"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="@dimen/default_font_size"
        	android:layout_marginLeft="@dimen/default_font_size"
        	android:layout_marginRight="@dimen/default_font_size"
        	android:text="@string/bar_code_search"
        	android:textSize="@dimen/default_font_size" />

	</LinearLayout>
	