<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/slider_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_big_font_size"
        android:contentDescription="@string/default_description"
        android:maxHeight="@dimen/music_icon_size"
        android:maxWidth="@dimen/music_icon_size"
        android:src="@drawable/music_volume" />

    <TextView
        android:id="@+id/slider_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/slider_icon"
        android:layout_marginLeft="@dimen/default_font_size_smaller"
        android:layout_marginRight="@dimen/default_font_size_smaller"
        android:layout_marginTop="@dimen/default_big_font_size"
        android:gravity="center_horizontal"
        android:text="@string/default_textview"
        android:textSize="@dimen/dialogue_font_size" />

     <TextView
         android:id="@+id/slider_value_textview"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         android:layout_below="@id/slider_textview"
         android:layout_marginLeft="@dimen/default_font_size_smaller"
         android:layout_marginRight="@dimen/default_font_size_smaller"
         android:layout_marginTop="@dimen/default_font_size_smaller"
         android:gravity="center_horizontal"
         android:text="@string/default_textview"
         android:textColor="@color/dark_blue_background"
         android:textSize="@dimen/dialogue_font_size"
         android:textStyle="bold" />
    
    <SeekBar
        android:id="@+id/slider_seekbar"
        style="android:seekBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/slider_value_textview"
        android:layout_marginLeft="@dimen/default_big_font_size"
        android:layout_marginRight="@dimen/default_big_font_size"
        android:layout_marginTop="@dimen/default_big_font_size"
        android:contentDescription="@string/default_description"
        android:minHeight="13dip" />

    <TextView
        android:id="@+id/slider_dummy_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider_seekbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_big_font_size"
        android:text="@string/default_textview"
        android:textSize="@dimen/dialogue_font_size" />

</RelativeLayout>