<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="6dip" >

    <TextView
        android:id="@+id/subTitleText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:layout_marginTop="@dimen/default_font_size"
        android:background="@color/white"
        android:text="@string/blank_textview"
        android:textColor="@color/gray"
        android:textSize="@dimen/dialogue_font_size"
        android:textStyle="normal"
        android:visibility="invisible" />
    
     <TextView
         android:id="@+id/defaultText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginBottom="@dimen/default_font_size"
         android:layout_marginLeft="@dimen/default_font_size"
         android:layout_marginRight="@dimen/default_font_size"
         android:layout_marginTop="@dimen/default_font_size"
         android:background="@color/light_grey"
         android:clickable="true"
         android:gravity="center_horizontal"
         android:padding="@dimen/default_font_size_smaller"
         android:text="@string/blank_textview"
         android:textColor="@color/gray"
         android:textSize="@dimen/dialogue_font_size"
         android:textStyle="normal"
         android:visibility="visible" />

     <TextView
         android:id="@+id/defaultTextAdvice"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginBottom="@dimen/default_font_size"
         android:background="@color/white"
         android:gravity="center_horizontal"
         android:text="@string/press_text"
         android:textColor="@color/gray"
         android:textSize="@dimen/Font_10p"
         android:textStyle="italic"
         android:visibility="visible" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_font_size"
        android:layout_marginLeft="@dimen/default_big_font_size"
        android:layout_marginRight="@dimen/default_big_font_size"
        android:layout_marginTop="@dimen/default_font_size"
        android:ems="10"
        android:inputType="text"
        android:maxLines="@integer/Integer_1"
        android:textSize="@dimen/dialogue_font_size" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/blank_textview"
        android:textSize="@dimen/default_big_font_size" />

</LinearLayout>