<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diboson_bw_edge"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Dialogue" >

    <TextView
        android:id="@+id/dialogueTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginBottom="@dimen/default_font_size"
        android:layout_marginTop="@dimen/default_font_size"
        android:gravity="center_horizontal"
        android:hint="@string/dialogue_status_messages"
        android:textSize="@dimen/default_font_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogueTextViewEntered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogueTextView"
        android:layout_marginBottom="@dimen/default_font_size"
        android:layout_marginTop="@dimen/default_font_size"
        android:gravity="center_horizontal"
        android:hint="@string/dialogue_spoken_phrase"
        android:textSize="@dimen/default_font_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogueTextViewMatched"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogueTextViewEntered"
        android:layout_marginTop="@dimen/default_font_size"
        android:gravity="center_horizontal"
        android:hint="@string/dialogue_matching_phrase"
        android:textSize="@dimen/default_font_size"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/diskProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fitsSystemWindows="true" />

</RelativeLayout>