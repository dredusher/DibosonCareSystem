<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Television" >

    <TextView
        android:id="@+id/televisionStatusView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/remote_controller"
        android:textColor="@color/yellow_background"
        android:textSize="@dimen/Font_30dp"
        android:textStyle="bold" />
      
    <GridView
        android:id="@+id/televisionGridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/televisionStatusView"
        android:gravity="center"
        android:horizontalSpacing="@dimen/font1dp"
        android:numColumns="@integer/Number_4"
        android:verticalSpacing="@dimen/font1dp" >

    </GridView>
    
</RelativeLayout>