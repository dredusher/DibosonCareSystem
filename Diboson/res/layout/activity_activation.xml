<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/carer"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivationActivity" >

    <TextView
        android:id="@+id/activation_key_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/default_big_font_size"
        android:layout_marginTop="@dimen/default_big_font_size"
        android:gravity="center_horizontal"
        android:text="@string/activation_key_testview"
        android:textSize="@dimen/default_big_font_size" />

    <EditText
        android:id="@+id/activation_key_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activation_key_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/default_big_font_size"
        android:layout_marginTop="@dimen/default_big_font_size"
        android:ems="10"
        android:hint="@string/activation_key_hint"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/activation_key_button"
        style="@style/customButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activation_key_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/default_big_font_size"
        android:layout_marginTop="@dimen/default_big_font_size"
        android:text="@string/activation_key_button"
        android:textSize="@dimen/default_font_size" />

</RelativeLayout>