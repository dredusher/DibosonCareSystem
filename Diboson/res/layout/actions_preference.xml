<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

	<LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/white"
    	android:orientation="vertical"
    	android:padding="6dip" >

    	<TextView
        	android:id="@+id/subTitleText"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="@dimen/default_font_size"
        	android:layout_marginRight="@dimen/default_font_size"
        	android:layout_marginTop="@dimen/default_big_font_size"
        	android:background="@color/white"
        	android:text="@string/blank_textview"
        	android:textColor="@color/gray"
        	android:textSize="@dimen/dialogue_font_size"
        	android:textStyle="normal"
        	android:visibility="invisible" />
    
     	<TextView
        	android:id="@+id/defaultText"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_gravity="center_horizontal"
         	android:layout_marginBottom="@dimen/default_font_size"
         	android:layout_marginLeft="@dimen/default_font_size"
         	android:layout_marginRight="@dimen/default_font_size"
         	android:layout_marginTop="@dimen/default_big_font_size"
         	android:background="@color/light_grey"
         	android:clickable="true"
         	android:gravity="center_horizontal"
         	android:padding="@dimen/default_font_size_smaller"
         	android:text="@string/blank_textview"
         	android:textColor="@color/gray"
         	android:textSize="@dimen/dialogue_font_size"
         	android:textStyle="normal"
         	android:visibility="gone" />

     	<TextView
         	android:id="@+id/defaultTextAdvice"
         	android:layout_width="match_parent"
         	android:layout_height="wrap_content"
         	android:layout_gravity="center_horizontal"
         	android:layout_marginBottom="@dimen/default_big_font_size"
         	android:background="@color/white"
         	android:gravity="center_horizontal"
         	android:text="@string/press_text"
         	android:textColor="@color/gray"
         	android:textSize="@dimen/Font_10p"
         	android:textStyle="italic"
         	android:visibility="gone" />

    	<EditText
       	 	android:id="@+id/editText"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="@dimen/default_font_size"
        	android:layout_marginLeft="@dimen/default_big_font_size"
        	android:layout_marginRight="@dimen/default_big_font_size"
        	android:layout_marginTop="@dimen/default_big_font_size"
        	android:ems="10"
        	android:inputType="text"
        	android:maxLines="@integer/Integer_1"
        	android:textSize="@dimen/dialogue_font_size" />

    	<Button
       	 	android:id="@+id/define_actions_button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:layout_marginBottom="@dimen/default_font_size_smaller"
        	android:text="@string/press_to_define_command"
        	android:textSize="@dimen/default_font_size_smaller" />

	</LinearLayout>
	
</ScrollView>