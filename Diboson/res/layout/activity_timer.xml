<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/diboson_bw_edge"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TimerActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical" >

            <DatePicker
                android:id="@+id/alarmDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/default_font_size" />

            <TimePicker
                android:id="@+id/alarmTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/alarm_required_action"
                style="@style/customTextView"
                android:text="@string/select_action_to_take" />

            <CheckBox
                android:id="@+id/alarmCheckBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_home"
                android:textSize="@dimen/default_font_size" />

            <CheckBox
                android:id="@+id/alarmCheckBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tablet_reminder"
                android:textSize="@dimen/default_font_size" />

            <CheckBox
                android:id="@+id/alarmCheckBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slide_show"
                android:textSize="@dimen/default_font_size" />
            
            <CheckBox
                android:id="@+id/alarmCheckBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_activity"
                android:textSize="@dimen/default_font_size" />

             <CheckBox
                 android:id="@+id/alarmCheckBox5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/message"
                 android:textSize="@dimen/default_font_size" />
            
             <CheckBox
                 android:id="@+id/alarmCheckBox6"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/email_message"
                 android:textSize="@dimen/default_font_size" />
            
            <Button
                android:id="@+id/alarmButton"
                style="@style/customButton"
                android:layout_marginTop="@dimen/default_font_size"
                android:text="@string/set_the_alarm" />
            
        </LinearLayout>

</ScrollView>