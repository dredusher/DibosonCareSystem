<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/panic_alarm_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/alright"
    android:clickable="true"
    android:longClickable="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PanicAlarmActivity" >

    <TextView
        android:id="@+id/panic_alarm_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/blank_textview"
        android:textColor="@color/black"
        android:textSize="@dimen/panic_alarm_font_size" />

    <TableRow
        android:id="@+id/panic_alarm_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/default_font_size"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/panic_alarm_clubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font2dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/clubs" />

        <ImageButton
            android:id="@+id/panic_alarm_hearts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font2dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/hearts" />

        <ImageButton
            android:id="@+id/panic_alarm_diamonds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font2dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/diamonds" />

        <ImageButton
            android:id="@+id/panic_alarm_spades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font2dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/spades" />

    </TableRow>

</RelativeLayout>