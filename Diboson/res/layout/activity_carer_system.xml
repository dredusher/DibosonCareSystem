<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/careplan_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/care"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/careplan_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/register_carer_button"
            style="@style/customButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/default_font_size"
            android:text="@string/register_carer_button"
            android:textSize="@dimen/default_big_font_size" />

        <Button
            android:id="@+id/register_agency_button"
            style="@style/customButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/register_carer_button"
            android:layout_marginTop="@dimen/default_font_size"
            android:text="@string/register_agency_button"
            android:textSize="@dimen/default_big_font_size" />

        <Button
            android:id="@+id/register_care_plan_button"
            style="@style/customButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/register_agency_button"
            android:layout_marginTop="@dimen/default_font_size"
            android:text="@string/register_care_plan_button"
            android:textSize="@dimen/default_big_font_size" />

        <Button
            android:id="@+id/print_care_plan_button"
            style="@style/customButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/register_care_plan_button"
            android:layout_marginTop="@dimen/default_font_size"
            android:text="@string/print_care_plan_button"
            android:textSize="@dimen/default_big_font_size" />
        
        <Button
            android:id="@+id/display_care_visit_log_button"
            style="@style/customButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/print_care_plan_button"
            android:layout_marginTop="@dimen/default_font_size"
            android:text="@string/display_care_visit_log_button"
            android:textSize="@dimen/default_big_font_size" />

    </RelativeLayout>

</ScrollView>