<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diboson_bw_edge"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Track" >

<TableLayout 
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Track" >

    <TextView
        android:id="@+id/current_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:background="@drawable/textview"
        android:gravity="center"
        android:lines="@integer/Number_4"
        android:maxLines="@integer/Number_4"
        android:minLines="@integer/Number_4"
        android:text="@string/latitude"
        android:textColor="@color/black_overlay"
        android:textColorHint="@color/black_overlay"
        android:textColorLink="@color/black_overlay"
        android:textSize="@dimen/track_font_size" />

    <TextView
        android:id="@+id/current_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:background="@drawable/textview"
        android:gravity="center"
        android:lines="@integer/Number_4"
        android:maxLines="@integer/Number_4"
        android:minLines="@integer/Number_4"
        android:shadowColor="@color/black_overlay"
        android:text="@string/longitude"
        android:textColor="@color/black_overlay"
        android:textColorHint="@color/black_overlay"
        android:textColorLink="@color/black_overlay"
        android:textSize="@dimen/track_font_size" />
    
   <TextView
       android:id="@+id/audio_filename"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/default_font_size"
       android:layout_marginRight="@dimen/default_font_size"
       android:background="@drawable/textview"
       android:gravity="center"
       android:lines="@integer/Number_4"
       android:maxLines="@integer/Number_4"
       android:minLines="@integer/Number_4"
       android:shadowColor="@color/black_overlay"
       android:text="@string/audio_filename"
       android:textColor="@color/black_overlay"
       android:textColorHint="@color/black_overlay"
       android:textColorLink="@color/black_overlay"
       android:textSize="@dimen/track_font_size" />

   <Button
       android:id="@+id/accuracy_up"
       android:layout_width="wrap_content"
       android:layout_height="44dp"
       android:layout_marginLeft="@dimen/default_font_size"
       android:layout_marginRight="@dimen/default_font_size"
       android:background="@drawable/textview"
       android:text="@string/increase_accuracy"
       android:textColor="@color/dark_blue_background"
       android:textColorHint="@color/dark_blue_background"
       android:textSize="@dimen/track_font_size" />

   <Button
       android:id="@+id/accuracy_down"
       android:layout_width="wrap_content"
       android:layout_height="44dp"
       android:layout_marginLeft="@dimen/default_font_size"
       android:layout_marginRight="@dimen/default_font_size"
       android:background="@drawable/textview"
       android:text="@string/decrease_accuracy"
       android:textColor="@color/dark_blue_background"
       android:textSize="@dimen/track_font_size" />
   
    <Button
        android:id="@+id/track_button"
        style="?buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:layout_weight="0.20"
        android:background="@drawable/textview"
        android:text="@string/track_button"
        android:textColor="@color/black_overlay"
        android:textSize="@dimen/track_font_size" />

    </TableLayout>

    <ImageButton
        android:id="@+id/record_note_button"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="@dimen/default_font_size"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginStart="@dimen/default_font_size"
        android:background="@color/transparent"
        android:contentDescription="@string/dummy_content"
        android:scaleType="fitCenter"
        android:src="@drawable/track_record_note" />
    
    <ImageButton
        android:id="@+id/record_image_button"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:layout_marginEnd="@dimen/default_font_size"
        android:background="@color/transparent"
        android:contentDescription="@string/dummy_content"
        android:scaleType="fitCenter"
        android:src="@drawable/track_record_image" />

</RelativeLayout>