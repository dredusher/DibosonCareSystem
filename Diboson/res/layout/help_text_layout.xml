<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollViewHelpText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SystemInfoActivity" >

    <TextView
        android:id="@+id/help_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Font_10p"
        android:layout_marginRight="@dimen/Font_10p"
        android:gravity="left|center|start"
        android:maxLines="1000"
        android:text="@string/help_text"
        android:textColor="@color/black"
        android:textSize="@dimen/default_font_size"
        android:textStyle="bold" />

</ScrollView>