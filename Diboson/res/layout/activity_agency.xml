<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appointments_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/diboson_bw_edge"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/agency_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical" >
		
     <TextView
         android:id="@+id/title_agency_name"
         style="@style/customTextView"
         android:text="@string/title_agency_name" />

        <EditText
            android:id="@+id/input_agency_name"
            style="@style/customEditText"
            android:layout_below="@+id/title_agency_name"
            android:ems="10"
            android:inputType="textCapWords" >
        </EditText>
        
         <TextView
             android:id="@+id/title_agency_address"
             style="@style/customTextView"
             android:layout_below="@+id/input_agency_name"
             android:text="@string/title_agency_address" />

        <EditText
            android:id="@+id/input_agency_address"
            style="@style/customEditText"
            android:layout_below="@+id/title_agency_address"
            android:ems="10"
            android:inputType="textMultiLine|textPostalAddress"
            android:lines="@integer/Number_4"
            android:maxLines="@integer/Number10" >
        </EditText>
        
        <TextView
            android:id="@+id/title_agency_phonenumber"
            style="@style/customTextView"
            android:layout_below="@+id/input_agency_address"
            android:text="@string/title_agency_phonenumber" />

        <EditText
            android:id="@+id/input_agency_phonenumber"
            style="@style/customEditText"
            android:layout_below="@+id/title_agency_phonenumber"
            android:ems="10"
            android:inputType="phone" >
        </EditText>
        
         <TextView
             android:id="@+id/title_agency_emailaddress"
             style="@style/customTextView"
             android:layout_below="@+id/input_agency_phonenumber"
             android:text="@string/title_agency_emailaddress" />

        <EditText
            android:id="@+id/input_agency_emailaddress"
            style="@style/customEditText"
            android:layout_below="@+id/title_agency_emailaddress"
            android:ems="10"
            android:inputType="textEmailAddress" >
        </EditText>
        
         <TextView
             android:id="@+id/title_agency_contactname"
             style="@style/customTextView"
             android:layout_below="@+id/input_agency_emailaddress"
             android:text="@string/title_agency_contactName" />

        <EditText
            android:id="@+id/input_agency_contactname"
            style="@style/customEditText"
            android:layout_below="@+id/title_agency_contactname"
            android:ems="10"
            android:inputType="textCapWords" >
        </EditText>
        
         <TextView
             android:id="@+id/title_agency_notes"
             style="@style/customTextView"
             android:layout_below="@+id/input_agency_contactname"
             android:text="@string/title_agency_notes" />

        <EditText
            android:id="@+id/input_agency_notes"
            style="@style/customEditText"
            android:layout_below="@+id/title_agency_notes"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="@integer/Number_4"
            android:maxLines="@integer/Number10" >
        </EditText>
        
         <Button
             android:id="@+id/agency_new_button"
             style="@style/customButton"
             android:layout_below="@+id/input_agency_notes"
             android:layout_marginTop="@dimen/default_font_size"
             android:text="@string/agency_new_button" />
         
    </RelativeLayout>

</ScrollView>