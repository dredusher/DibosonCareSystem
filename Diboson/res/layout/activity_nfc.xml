<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diboson_bw_edge"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NFC_Activity" >

    <TextView
        android:id="@+id/command_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:text="@string/select_command_for_tag"
        android:textSize="@dimen/default_big_font_size"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/command_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/command_view"
        android:layout_marginBottom="@dimen/default_big_font_size"
        android:layout_marginTop="@dimen/default_big_font_size"
        android:gravity="center_vertical" />
    
     <TextView
         android:id="@+id/command_write_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         android:layout_below="@id/command_spinner"
         android:layout_marginTop="@dimen/default_big_font_size"
         android:gravity="center"
         android:text="@string/command_write_title_string"
         android:textSize="@dimen/default_big_font_size"
         android:textStyle="bold" />
     
      <TextView
          android:id="@+id/command_write_data"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@id/command_write_title"
          android:layout_marginLeft="@dimen/default_font_size"
          android:layout_marginRight="@dimen/default_font_size"
          android:gravity="center"
          android:text="@string/blank_textview"
          android:textSize="@dimen/default_font_size" />

    <Button
        android:id="@+id/command_button"
        style="@style/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/default_big_font_size"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:text="@string/write_command_to_tag"
        android:textSize="@dimen/default_big_font_size" />
    
    <Button
        android:id="@+id/command_actions_button"
        style="@style/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/command_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:text="@string/press_to_define_actions"
        android:textSize="@dimen/default_big_font_size" />
    
     <Button
         android:id="@+id/command_remote_button"
         style="@style/customButton"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_above="@id/command_actions_button"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         android:layout_marginLeft="@dimen/default_font_size"
         android:layout_marginRight="@dimen/default_font_size"
         android:text="@string/nfc_remote_processor"
         android:textSize="@dimen/default_font_size" />

</RelativeLayout>