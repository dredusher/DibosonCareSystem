<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TVChannelsActivity" >

     <TextView
         android:id="@+id/tv_channels_textview"
         style="@style/customTextView"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/file_summary"
         android:layout_centerHorizontal="true"
         android:layout_marginLeft="@dimen/default_font_size"
         android:layout_marginRight="@dimen/default_font_size"
         android:layout_marginTop="@dimen/default_font_size"
         android:background="@drawable/user_background"
         android:gravity="bottom|left"
         android:lines="@integer/Number20"
         android:maxLines="@integer/Number1000"
         android:scrollbars="vertical"
         android:text="@string/default_textview"
         android:textSize="@dimen/standard_text_font" />
     
    <Button
        android:id="@+id/epg_channels"
        style="@style/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_font_size"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:text="@string/epg_channels" />
    
    <Button
        android:id="@+id/epg_select_channels"
        style="@style/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/epg_channels"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:text="@string/epg_select_channels" />
    
    <Button
        android:id="@+id/epg_selected_channels"
        style="@style/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/epg_select_channels"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:text="@string/epg_selected_channels" />
    
    <Button
        android:id="@+id/epg_generate"
        style="@style/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/epg_selected_channels"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:text="@string/epg_generate" />
    
   <Button
        android:id="@+id/epg_show_epg"
        style="@style/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/epg_generate"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:text="@string/epg_show_epg" />
     
    <Button
        android:id="@+id/epg_sort_channels"
        style="@style/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/epg_show_epg"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:text="@string/epg_sort_channels" />
     
     
</RelativeLayout>