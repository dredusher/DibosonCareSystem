<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appointment_relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/FileImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_font_size_smaller"
        android:layout_marginStart="@dimen/default_font_size_smaller"
        android:contentDescription="@string/default_description"
        android:src="@drawable/files" />

    <TextView
        android:id="@+id/FileView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/default_font_size_smaller"
        android:layout_marginStart="@dimen/default_font_size_smaller"
        android:layout_marginTop="@dimen/default_font_size_smaller"
        android:layout_toEndOf="@id/FileImageView"
        android:layout_toRightOf="@id/FileImageView"
        android:singleLine="true"
        android:text="@string/FileView01"
        android:textSize="@dimen/default_font_size"
        android:textStyle="bold" >

    </TextView>

    <TextView
        android:id="@+id/FileView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/default_font_size_smaller"
        android:layout_marginRight="@dimen/default_font_size_smaller"
        android:layout_marginStart="@dimen/default_font_size_smaller"
        android:text="@string/FileView02"
        android:textColor="@color/gray"
        android:textSize="@dimen/standard_text_font"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/FileView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/FileView01"
        android:layout_marginBottom="@dimen/default_font_size_smaller"
        android:layout_marginEnd="@dimen/default_font_size_smaller"
        android:layout_marginRight="@dimen/default_font_size_smaller"
        android:text="@string/FileView03"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_text_font" />

</RelativeLayout>