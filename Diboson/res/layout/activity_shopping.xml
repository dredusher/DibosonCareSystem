<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appointments_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/groceries"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/appointment_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="false"
        android:orientation="vertical" >

   <Button
       android:id="@+id/button_shopping_products"
       style="@style/customButton"
       android:layout_alignParentTop="true"
       android:layout_marginTop="@dimen/default_font_size"
       android:text="@string/shopping_products" />
   
    <Button
        android:id="@+id/button_shopping_brands"
        style="@style/customButton"
        android:layout_below="@+id/button_shopping_products"
        android:layout_marginTop="@dimen/default_font_size"
        android:text="@string/shopping_brands" />
    
     <Button
         android:id="@+id/button_shopping_items"
         style="@style/customButton"
         android:layout_below="@+id/button_shopping_brands"
         android:layout_marginTop="@dimen/default_font_size"
         android:text="@string/shopping_items" />
     
      <Button
          android:id="@+id/button_shopping_shops"
          style="@style/customButton"
          android:layout_below="@+id/button_shopping_items"
          android:layout_marginTop="@dimen/default_font_size"
          android:text="@string/shopping_shops" />
      
       <Button
           android:id="@+id/button_shopping_transactions"
           style="@style/customButton"
           android:layout_below="@+id/button_shopping_shops"
           android:layout_marginTop="@dimen/default_font_size"
           android:text="@string/shopping_transactions" />
       
       <Button
           android:id="@+id/button_shopping_lists"
           style="@style/customButton"
           android:layout_below="@+id/button_shopping_transactions"
           android:layout_marginTop="@dimen/default_font_size"
           android:text="@string/shopping_lists" />
       
        <Button
            android:id="@+id/button_shopping_list"
            style="@style/customButton"
            android:layout_below="@+id/button_shopping_lists"
            android:layout_marginTop="@dimen/default_font_size"
            android:text="@string/shopping_list" />
        
     	<Button
     	    android:id="@+id/button_shopping_list_complete"
     	    style="@style/customButton"
     	    android:layout_below="@+id/button_shopping_list"
     	    android:layout_marginTop="@dimen/default_font_size"
     	    android:text="@string/shopping_list_complete" />
   
  </RelativeLayout>
  </ScrollView>