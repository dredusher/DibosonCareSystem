<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diboson_bw_edge"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ClonerActivity" >

    <TextView
        android:id="@+id/file_summary"
        style="@style/customTextView"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:layout_marginTop="@dimen/default_font_size"
        android:text="@string/file_summary" />
    
   <Button
        android:id="@+id/button_clone_files"
        style="@style/customButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_font_size"
        android:text="@string/clone_files" />
    

    <TextView
        android:id="@+id/file_list"
        style="@style/customTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_clone_files"
        android:layout_below="@id/file_summary"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/default_font_size"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:layout_marginTop="@dimen/default_font_size"
        android:background="@drawable/user_background"
        android:gravity="bottom|start"
        android:maxLines="@integer/Number1000"
        android:scrollbars="vertical"
        android:text="@string/default_textview"
        android:textSize="@dimen/clone_font_size" />
 
</RelativeLayout>