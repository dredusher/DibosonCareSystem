<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diboson_bw_edge"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.usher.diboson.NamedActionsActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_big_font_size"
        android:gravity="center_horizontal"
        android:text="@string/named_actions_name"
        android:textSize="@dimen/default_big_font_size" />

    <EditText
        android:id="@+id/named_actions_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="@dimen/default_big_font_size"
        android:layout_marginRight="@dimen/default_big_font_size"
        android:layout_marginTop="@dimen/default_font_size"
        android:ems="10"
        android:hint="@string/named_actions_name_hint" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/named_actions_name"
        android:layout_marginTop="@dimen/default_font_size"
        android:gravity="center_horizontal"
        android:text="@string/named_actions_actions"
        android:textSize="@dimen/default_big_font_size" />

    <EditText
        android:id="@+id/named_actions_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:layout_marginTop="@dimen/default_font_size"
        android:ems="10"
        android:hint="@string/named_actions_actions_hint"
        android:lines="@integer/Number_5" />

    <Button
        android:id="@+id/named_actions_actions_wizard_button"
        style="@style/customButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/named_actions_actions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_font_size"
        android:gravity="center_horizontal"
        android:text="@string/named_actions_wizard_button"
        android:textSize="@dimen/default_big_font_size" />

    <Button
        android:id="@+id/named_actions_define_button"
        style="@style/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/named_actions_actions_wizard_button"
        android:layout_marginLeft="@dimen/default_font_size"
        android:layout_marginRight="@dimen/default_font_size"
        android:layout_marginTop="@dimen/default_big_font_size"
        android:text="@string/named_actions_define_legend"
        android:textSize="@dimen/default_big_font_size" />

</RelativeLayout>
