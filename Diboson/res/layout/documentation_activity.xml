<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TVChannelsActivity" >

    <TextView
        android:id="@+id/activity_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/default_big_font_size"
        android:layout_marginRight="@dimen/default_big_font_size"
        android:layout_marginTop="@dimen/default_font_size"
        android:gravity="center_horizontal"
        android:text="@string/default_textview"
        android:textAppearance="@style/customTextView"
        android:textSize="@dimen/default_big_font_size" />

     <TextView
         android:id="@+id/documentation_textview"
         style="@style/customTextView"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/activity_name_textview"
         android:layout_centerHorizontal="true"
         android:layout_marginLeft="@dimen/default_font_size"
         android:layout_marginRight="@dimen/default_font_size"
         android:layout_marginTop="@dimen/default_font_size"
         android:background="@drawable/user_background"
         android:gravity="bottom|left"
         android:lines="@integer/Number25"
         android:maxLines="@integer/Number1000"
         android:scrollbars="vertical"
         android:text="@string/default_textview"
         android:textSize="@dimen/standard_text_font" />
     
  <Button
       android:id="@+id/cancel_documentation_button"
       style="@style/customButton"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="@dimen/default_big_font_size"
       android:layout_marginLeft="@dimen/default_font_size"
       android:layout_marginRight="@dimen/default_font_size"
       android:text="@string/cancel" />
    
   <Button
       android:id="@+id/add_documentation_button"
       style="@style/customButton"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_above="@id/cancel_documentation_button"
       android:layout_marginLeft="@dimen/default_font_size"
       android:layout_marginRight="@dimen/default_font_size"
       android:text="@string/add_note" />
     
</RelativeLayout>