<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollViewHelpText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SystemInfoActivity" >

    <TextView
        android:id="@+id/help_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="@dimen/Font_10p"
        android:layout_marginRight="@dimen/Font_10p"
        android:background="@drawable/customedittext"
        android:gravity="center_horizontal|center"
        android:maxLines="1000"
        android:text="@string/help_text"
        android:textColor="@color/dark_blue_background"
        android:textSize="@dimen/Font_36dp"
        android:textStyle="bold" />

</ScrollView>